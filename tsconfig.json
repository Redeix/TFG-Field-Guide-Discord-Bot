{
    "compilerOptions": {
        "allowJs": true,
        "checkJs": false,
        "noEmit": true,

        "target": "es2015",
        "lib": ["ES2015"],

        "alwaysStrict": true,
        "allowUnreachableCode": false,

        "noCheck": false,

        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    }
}